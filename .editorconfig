# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js*]
indent_style = space
indent_size = 2

[*.less]
indent_style = space
indent_size = 2

[*.jade]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 4

[*rc]
indent_style = space
indent_size = 2
